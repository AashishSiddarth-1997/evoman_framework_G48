import numpy  

# here goes the AI algorithm code for enemy 3 
class enemy3_controller(): 


        def __init__(self):
 
            self.atack1 = None
            self.atack2 = None
            self.atack3 = None
            self.atack4 = None
 

        def play(self,params):


            self.atack1 = numpy.random.choice([1,0])
            self.atack2 = numpy.random.choice([1,0])
            self.atack3 = numpy.random.choice([1,0])
            self.atack4 = numpy.random.choice([1,0])
	

	    return self.atack1, self.atack2, self.atack3, self.atack4

	 
